/* pages/index/index.wxss */
/* 轮播图 */
.swiper-banner {
  width: 100%;
}

.swiper-banner .swiper-pic {
  width: 100%;
  height: 350rpx;
}

/* 五个图标导航区域 */
.nav-container {
  display: flex;
  margin-top: 15rpx;
}

.nav-container .nav-item {
  /* 设置同大小 */
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-container .nav-item .nav-text {
  font-size: 28rpx;
}

.iconfont {
  width: 100rpx;
  height: 100rpx;
  background-color: #f53522;
  text-align: center;
  line-height: 100rpx;
  font-size: 55rpx;
  border-radius: 50%;
  color: white;
}

.recommend-container {
  padding: 20rpx;
  height: 100rpx;
}

.recommend-container .header .title {
  color: gray;
}

.recommend-container .nav {
  margin-top: 15rpx;
}

.recommend-container .more {
  float: right;
  box-sizing: border-box;
  padding: 8rpx;
  border: 1rpx solid black;
  border-radius: 30rpx;
  font-size: 25rpx;
  /* 保持下平行 */
  margin-top: -7rpx;
}

/* 滚动部分 */
.recommend-container .scroll {
  display: flex;
  margin-top: 10rpx;
  height: 300rpx;
}

.recommend-container .scroll-item {
  width: 200rpx;
  margin-right: 20rpx;
}

/* 图片 */
.recommend-container .scroll-pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 25rpx;
}

/* 文字介绍 */
.recommend-container .scroll-title {
  font-size: 23rpx;
  display: block;
  /* 单行文本溢出省略号处理 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出,省略号处理 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 这里设置为二行 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}